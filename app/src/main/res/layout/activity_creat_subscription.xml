<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="team.four.mys.CreateSubscriptionActivity">

    <TextView
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/create"
        android:textColor="@color/grey_200"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:autofillHints="username"
        android:background="@drawable/item_background_frame_1"
        android:fontFamily="@font/roboto_medium"
        android:hint="@string/createNameSubscription"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:textColorHint="@color/grey_500"
        android:paddingTop="17dp"
        android:paddingBottom="16dp"
        android:textColor="@color/grey_200"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/cost_EditText"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="username"
        android:textColorHint="@color/grey_500"
        android:background="@drawable/item_background_white"
        android:hint="@string/CrateCostSubscription"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingTop="17dp"
        android:paddingBottom="16dp"
        android:textColor="@color/grey_200"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/costSpinner"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/costSpinner"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/item_background_white"
        android:entries="@array/costSpinner"
        android:popupBackground="@drawable/item_background_white"
        app:layout_constraintLeft_toRightOf="@id/cost_EditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_create"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/item_background_blue"
        android:text="@string/button_create"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/costSpinner" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment"
        android:name="Fragments.NavigationFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>