<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="team.four.mys.Recovery1Activity">

    <TextView
        android:id="@+id/recovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/recovery"
        android:textColor="@color/grey_200"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="12"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/code"
        android:textAlignment="center"
        android:textColor="@color/grey_200"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recovery" />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="username"
        android:background="@drawable/item_background_code"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@id/edit2"
        app:layout_constraintTop_toBottomOf="@id/textview"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="username"
        android:background="@drawable/item_background_code"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@id/edit3"
        app:layout_constraintTop_toBottomOf="@id/textview"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/edit3"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:autofillHints="username"
        android:background="@drawable/item_background_code"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/edit4"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:autofillHints="username"
        android:background="@drawable/item_background_code"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/edit3"
        app:layout_constraintTop_toBottomOf="@id/textview"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/edit5"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:autofillHints="username"
        android:background="@drawable/item_background_code"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/edit4"
        app:layout_constraintTop_toBottomOf="@id/textview"
        tools:ignore="LabelFor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/item_background_blue"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/continue_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit3" />

    <TextView
        android:id="@+id/codeAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/codeAgain"
        android:textColor="@color/blue_200"
        android:textSize="13sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/continue_button" />

</androidx.constraintlayout.widget.ConstraintLayout>