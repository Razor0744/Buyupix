<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/background_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:ambientShadowAlpha">0.04</item>
        <item name="android:spotShadowAlpha">0.04</item>
    </style>

    <style name="splash_screen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/background_main</item>
        <item name="colorPrimaryDark">@color/background_main</item>
        <item name="colorAccent">@color/background_main</item>
        <item name="android:statusBarColor">@color/background_main</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="bottom_navigation_view_text_style_click">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="bottom_navigation_view_text_style">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="layout_login_activity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/item_background_button_login</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="text1_login_activity">
        <item name="android:layout_marginStart">21dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="text2_login_activity">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">31dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="style_item_code_send_activity">
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:maxLength">1</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/focused_code_send</item>
        <item name="android:layout_marginTop">56dp</item>
    </style>

    <style name="arrow_left">
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/image_button_click_on_arrow_left</item>
        <item name="android:src">@drawable/ic_arrow_left</item>
    </style>

</resources>