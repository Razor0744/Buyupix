<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyS" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/backgroundMain</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
    </style>

    <style name="BottomNavigationViewTextStyleClick">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="CalendarViewCustom">
        <item name="android:background">@drawable/calendarview_background</item>
        <item name="android:textColorPrimary">@color/blueMain</item>
        <item name="colorAccent">@color/blueMain</item>
    </style>

    <style name="CalendarViewDateCustomText">
        <item name="android:textColor">@color/textMain</item>
    </style>

    <style name="CalendarViewWeekCustomText">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

</resources>