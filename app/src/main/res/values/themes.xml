<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/backgroundMain</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:ambientShadowAlpha">0.04</item>
        <item name="android:spotShadowAlpha">0.04</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/backgroundMain</item>
        <item name="colorPrimaryDark">@color/backgroundMain</item>
        <item name="colorAccent">@color/backgroundMain</item>
        <item name="android:statusBarColor">@color/backgroundMain</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BottomNavigationViewTextStyleClick">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="LayoutLoginActivity">
        <item name="android:background">@drawable/item_background_button_login</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Text1LoginActivity">
        <item name="android:layout_marginStart">21dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textMain</item>
    </style>

    <style name="Text2LoginActivity">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">31dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="StyleItemCodeSendActivity">
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/textMain</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:background">@drawable/focused_code_send</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="ArrowLeft">
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/click_on_arrow_left</item>
        <item name="android:src">@drawable/ic_arrow_left</item>
    </style>

</resources>