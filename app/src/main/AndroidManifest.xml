<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team.four.mys">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/application_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyS">
        <activity
            android:name=".presentation.DarkModeActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.SubscriptionInfoActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.MainActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.AlertActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.LanguageActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.CodeSendActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.FirstActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.CreateSubscriptionActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>